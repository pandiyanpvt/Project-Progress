rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Projects collection
    match /projects/{projectId} {
      // Allow authenticated users to read/write their own projects
      allow read, write: if request.auth != null && request.auth.uid == resource.data.createdBy;
      // Allow public read access for projects with publicId (for client view)
      allow read: if resource.data.publicId != null;
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      // Allow authenticated users to read/write tasks for their projects
      allow read, write: if request.auth != null && request.auth.uid == resource.data.createdBy;
      // Allow public read access to all tasks (for client view)
      allow read: if true;
    }
  }
}

